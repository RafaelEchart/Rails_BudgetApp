<body class="sessions_body">
<%= render "partials/sessionsheaders", :message => "sign_up" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), name: "signup") do |f| %>

  <div class="field">
  <div class="photo-field">
    <img src="https://www.slotcharter.net/wp-content/uploads/2020/02/no-avatar.png" width="30" />
    <input class="sessions_input-photo" disabled placeholder="Upload Photo"/>
  </div>
  </div>
  
  <div class="field">
    <%= f.text_field :name, class: "sessions_input", placeholder: "Full Name", id: "new_name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sessions_input", placeholder: "Email" %>
  </div>

  <div class="field">   
    <%= f.password_field :password, autocomplete: "new-password", class: "sessions_input", placeholder: "Password (6 characters min)" %>
  </div>


 
<% end %>


</body>