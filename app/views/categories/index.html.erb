<body class="sessions_body">

<%= render "partials/userheader", :title => "CATEGORIES", :page => "" %>

<div class="category_page_container">


<div class="total_category_container info_cursor">
<div class="total_category_left">
<ion-icon name="bookmark-outline" class="category_icon-total"></ion-icon>
<span class="">Total categories</span>
</div>

<span class="total_category_number"><%= @categories.length%></span>
</div>

<% @categories.each do |category|%>

<div class="total_category_container" onClick="goToCategory(<%= category.id%>)">
<div class="total_category_left">
<ion-icon name="<%=category.icon%>" class="category_icon-item"></ion-icon>
<span class=""><%=category.name%></span>
</div>

<span class="total_category_number">$<%= category.total_amount(category.entity_categories) %></span>
</div>

<% end%>





<div class="bottom_button">
<div class="button_align">
  <%= button_to "New Category", categories_new_path, class: "button_style", method: :get%>
</div>
</div>

<div>
</body>